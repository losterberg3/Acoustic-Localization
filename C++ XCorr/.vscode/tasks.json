{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++14",
                "-g",
                "${workspaceFolder}/FFTCODE.cpp",
                "-o",
                "${workspaceFolder}/FFTCODE",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lfftw3"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
